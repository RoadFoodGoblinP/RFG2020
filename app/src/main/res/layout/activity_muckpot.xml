<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Muckpot">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--툴바 영역 시작-->
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FF9800"
            app:contentInsetStart="10dp">

            <LinearLayout
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:src="@drawable/profile_default"
                    android:layout_width="40dp"
                    android:layout_height="40dp"/>

                <ImageView
                    android:src="@android:color/transparent"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <LinearLayout
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="먹팟"
                        android:textColor="#fff"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <ImageView
                    android:src="@drawable/search"
                    android:layout_width="30dp"
                    android:layout_height="22dp"/>

                <ImageView
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/alert"
                    android:layout_width="30dp"
                    android:layout_height="25dp"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <!--컨텐츠 영역 시작-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 리스트 전체 레이아웃 -->
            <LinearLayout
                android:background="@drawable/feed_border"
                android:id="@+id/muck_list"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp">

                <!-- 한 개의 먹팟 레이아웃 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <!-- 먹팟 썸네일 이미지 -->
                    <ImageView
                        android:id="@+id/muck_Img"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/ic_launcher_background" />

                    <!-- 텍스트 전체 레이아웃 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical"
                        android:paddingTop="5dp">

                        <!-- 제목 라인 레이아웃 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/muck_Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="7dp"
                                android:text="제목"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/muck_Time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="게시시간"
                                android:textSize="14dp" />
                        </LinearLayout>

                        <!-- 내용 미리보기 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp">

                            <TextView
                                android:id="@+id/muck_TextPreview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="내용내용내용내용내용내용내용내용내용내용내용내용"
                                android:textSize="15dp" />
                        </LinearLayout>

                        <!-- 위치 라인 레이아웃 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/location" />

                            <TextView
                                android:id="@+id/muck_Location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="서울시 성동구 한양여대"
                                android:textSize="14dp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="7" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:src="@drawable/number_people" />

                            <TextView
                                android:id="@+id/muck_TotalMember"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="2/5"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/muck_WriteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#f78025"
        android:src="@drawable/write"
        app:borderWidth="0dp"
        app:fabSize="normal"/>
</RelativeLayout>