                        </LinearLayout>
                    </LinearLayout>

                    <ImageButton
                        android:layout_weight="0"
                        android:layout_width="20dp"
                        android:layout_height="50dp"
                        android:src="@android:color/holo_green_dark" />
                </LinearLayout>

                <!--본문 텍스트 영역-->
